
.publishOrder{
    font-size:40rpx;
    line-height:45rpx;
    position: absolute;
    width: 100%;
}

.top{
    display: flex;
    flex-direction: row;
    padding:10rpx 10rpx 30rpx;
}

.pic{
    width: 40%;
    display: inline-block;
}
.pic image{
    width: 90%;
    padding: 10rpx,auto;
}
.publish_order_title{
    color: #000;
    font-size:60rpx;
    text-align: center;
}
.top_right{
    padding-left:80rpx;
    padding-top:50rpx;
    width: 70%;
}

.radio-group{
    border-bottom:1rpx solid #999;
    padding-left: 100rpx;
}

.down{
  margin-top: 24rpx;
  background-color: white;
}
.order_input{  
    padding:20rpx;
    border-bottom:1rpx solid #999;
    margin-top:10rpx;
}


/* 选择图片 */
.chooseImge{
  display: flex;
  flex-direction: row;
}
.choosePic{
  width: 60%;
  display: inline-block;
  padding-top: 20rpx;
}
.choosePic image{
  width: 100%;
  padding: 10rpx,auto;
  height: 200rpx;
}
.choosePic_right{
  padding-left:30rpx;
  padding-top:30rpx;
  width: 40%;
}
.img_submit{
    width: 90%;
    text-align: center;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    border-radius: 10rpx;
    margin-top: 25rpx;
}
.img_submit button{
  background-color: #E1E5E8;
  color: #000;
}


.submit{
    width: 90%;
    margin: 0 auto;
    text-align: center;
    color: #fff;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    border-radius: 10rpx;
    margin-top: 25rpx;
}
.submit button{
  background-color: #1296db;
}