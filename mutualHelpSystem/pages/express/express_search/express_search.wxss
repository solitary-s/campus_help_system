/* pages/express/express_search/express_search.wxss */

page{
    background-color:#F5F5F5;
}

.classify_list{
     display:flex;
     flex-direction: row;
     padding:22rpx;
}
/*标题要明显，其他不太明显*/
.title{
    font-size: 38rpx;
    font-weight: 600;
    color: rgb(0,0,0);

}
.small{
    font-size: 30rpx;
    color: rgb(0,0,0,0.8);
}

swiper{
    height: 370rpx;
    padding-top:10rpx;

}

.search_to{
    display: flex;
    flex-direction: row;
    font-size: 32rpx;
    color: #979797;
    background-color: #1296db;
    padding:20rpx 0;

}
/*输入框*/
.input{
    /* line-height: 40rpx;
    height: 40rpx; */
    padding-top: 16rpx;
    padding-bottom: 8rpx;
    background: #fff;
    border-radius: 20rpx;
    width: 60%;
    /*padding-right: 0;*/
    padding-left: 65rpx;
}
.big{
    position: relative;
    top: 24rpx;
    left: 50rpx;
}
/*搜索按钮*/
.btn_one{
    line-height:52rpx;
    padding-top:15rpx;
    padding-bottom:15rpx;
    font-size:40rpx;
}

.pic{
    width: 30%;
    display: inline-block;
}
.pic image{
    width: 80%;
}
.hr,.hrr{
    height:20rpx;
    width: 100%;
    background-color: black;
    border-top: white solid 1px ;
    border-bottom: white solid 1px;
    opacity:0.1;
}
.hrr{
    height:10px;
}

.list_content{
    width: 70%;
    display: inline-block;
    padding-top: 10rpx;
    padding-left: 10rpx;
}

/*加载更多按钮*/
.more{
    font-size:34rpx;
    background-color: #F9F9F9;
}
/*没有更多信息了*/
.no_more{
    padding-top:20rpx;
    padding-bottom:20rpx;
    text-align: center;
    background-color: #F9F9F9;
    font-size:30rpx;
}



